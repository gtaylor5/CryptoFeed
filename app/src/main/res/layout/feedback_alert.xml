<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:id="@+id/container"
    android:gravity="center">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/card_color"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/alertHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textAlignment="center"
                style="@style/Base.TextAppearance.AppCompat.Medium"/>

            <EditText
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/feedbackBox"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
                android:maxLines="10"
                android:backgroundTint="@color/white"
                android:layout_margin="10dp"
                android:textColor="@color/negative_red"
                android:hint="What do you think of CryptoFees?"
                android:textColorHint="@color/heading_color"
                android:gravity="top|start"/>

            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/negative_red"
                android:layout_margin="10dp"
                android:text="@string/send"
                android:textColor="@color/white"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
